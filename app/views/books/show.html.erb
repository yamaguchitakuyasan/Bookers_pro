  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home", user_path(current_user) %></li>
      <li><%= link_to "User", users_path %></li>
      <li><%= link_to "Books", books_path %></li>
      <li><%= link_to "Logout", root_path %></li>
    </ul>
    </nav>
  </div>
</header>

<div class="container">
  <div class="row">
  <div class="col-lg-3">
   <h1>User info</h1>
    <div class="profile-container">
      <h2 class="profile-name"><%= current_user.name %></h2>
    </div>

   <h1>New book</h1>
   <%= form_for(@book) do |f| %>
     <div class="field">
      <label for="book_title">Title</label>
   <%= f.text_field :title %>
     </div>
     <div class="field">
      <label for="book_body">Body</label>
   <%= f.text_area :body %>
     </div>
     <div class="actions">
   <%= f.submit 'Create Book' %>
     </div>
   <% end %>
  </div>


  <div class="col-lg-9">
  <h1>Bookã€€detail</h1>
  <table class="table table-striped">
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
     </tr>
    </thead>
     <tbody>
       <tr>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "destroy", book_path(@book), method: :delete %></td>
       </tr>
     </tbody>
   </table>
  </div>
 </div>
</div>

