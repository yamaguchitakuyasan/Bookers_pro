<header class="navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to(" Home", user_path(current_user), {class: "glyphicon glyphicon-home"}) %></li>
      <li><%= link_to(" User", users_path, {class: "glyphicon glyphicon-user"}) %></li>
      <li><%= link_to(" Books", books_path, {class: "glyphicon glyphicon-book"}) %></li>
      <li><%= link_to(" Logout", destroy_user_session_path, { method: :delete, class: "glyphicon glyphicon-log-out"}) %></li>
    </ul>
    </nav>
  </div>
</header>

<div class="container">
<h1>User info</h1>
<% if @user.errors.any? %>
 <div id="error_explanation">
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
 <% end %>

 <%= form_for(@user) do |f| %>
  <div class="field">
  <label for="name">Name</label>
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <label for="image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>
  <div class="field">
    <label for="introduction">Introduction</label>
    <%= f.text_area :introduction%>
  </div>
  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>

  <% end %>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
