<header class="navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home", user_path(current_user) %></li>
      <li><%= link_to "User", users_path %></li>
      <li><%= link_to "Books", books_path%></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    </ul>
    </nav>
  </div>
</header>

<div class="container">
  <div class="row">
   <div class="col-lg-3">
    <h1>User info</h1>
    <div class="profile-container">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',  fallback: "no_image.jpg" %>
      <% if @user.id == current_user.id %>
      <h2 class="profile-name"><%= current_user.name %></h2>
      <h2>introduction</h2>
      <div class="row">
      <%= link_to("", edit_user_path(@user), {class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"}) %>
      </div>
      <% end %>
    </div>

    <h1>New book</h1>
    <%= form_for(@book) do |f| %>
     <div class="field row">
      <label for="book_title">Title</label>
    <%= f.text_field :title, :class=>"col-xs-12 book_body" %>
     </div>
     <div class="field row">
      <label for="book_body">Opinion</label>
    <%= f.text_area :body, :class=>"col-xs-12 book_body" %>
     </div>
     <div class="actions row">
    <%= f.submit 'Create Book', :class=>"btn btn-primary col-xs-12" %>
     </div>
    <% end %>
   </div>

  <div class="col-lg-9">
   <table class="table table-hover table-inverse">

   <h1>Books</h1>
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg',  fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
       </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
