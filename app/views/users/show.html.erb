<header class="navbar navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Home</a></li>
      <li><a href="#">Users</a></li>
      <li><a href="#">Books</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
    </nav>
  </div>
</header>

<div class="container">
  <div class="row">
  <div class="col-lg-3">
   <h1>User info</h1>

   <h1>New book</h1>
   <%= form_for(@book) do |f| %>
     <div class="field">
      <label for="book_title">Title</label>
   <%= f.text_field :title %>
     </div>
     <div class="field">
      <label for="book_body">Body</label>
   <%= f.text_area :body %>
     </div>
     <div class="actions">
   <%= f.submit 'Create Book' %>
     </div>
   <% end %>
</div>

  <div class="col-lg-9">
   <table class="table table-striped">

<h1>Books</h1>
    <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
       </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
