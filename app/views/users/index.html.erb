<header class="navbar navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Home", user_path(current_user) %></li>
      <li><%= link_to "User", users_path %></li>
      <li><%= link_to "Books", books_path %></li>
      <li><%= link_to "Logout", root_path %></li>
    </ul>
    </nav>
  </div>
</header>

<div class="container">
  <div class="row">
  <div class="col-lg-3">
   <h1>User info</h1>
    <div class="profile-container">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',  fallback: "no_image.jpg" %>
      <% if @user == current_user %>
      <h2 class="profile-name"><%= current_user.name %></h2>
      <% end %>
   <h1>New book</h1>
    <%= form_for(@book) do |f| %>
     <div class="field">
      <label for="book_title">Title</label>
    <%= f.text_field :title %>
     </div>
     <div class="field">
      <label for="book_body">Opinion</label>
    <%= f.text_area :body %>
     </div>
     <div class="actions">
    <%= f.submit 'Create Book' %>
     </div>
    <% end %>
  </div>
</div>

  <div class="col-lg-9">
   <table class="table table-striped">

   <h1>Users</h1>
    <thead>
     <tr>
      <th>name</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
      <td><%= user.name %></td>
      </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>