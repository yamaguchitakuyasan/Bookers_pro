<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

<div class="field">
  <label for="book_title">Title</label>
    <%= f.text_field :title %>
</div>
<div class="field">
  <label for="book_body">Body</label>
    <%= f.text_area :body %>
</div>

<div class="actions">
    <%= f.submit 'Update Book' %>
</div>

<%= link_to "Show", "/books/#{@book.id}" %> |
<%= link_to "Back", "/books" %>
<% end %>