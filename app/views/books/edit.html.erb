<header class="navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to" Home", user_path(current_user), {class: "glyphicon glyphicon-home"} %></li>
      <li><%= link_to" User", users_path, {class: "glyphicon glyphicon-user"} %></li>
      <li><%= link_to" Books", books_path, {class: "glyphicon glyphicon-book"} %></li>
      <li><%= link_to" logout", destroy_user_session_path, { method: :delete, class: "glyphicon glyphicon-log-out"} %></li>
    </nav>
  </div>
</header>

<div class="container">
<div class='row'>
 <div class='col-md-6 col-md-offset-3'>

<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

<% if @book.errors.any? %>
 <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
 <% end %>

<div class="field row">
  <label for="book_title">Title</label>
    <%= f.text_field :title, :class=>"col-xs-12 book_title" %>
</div>
<div class="field row">
  <label for="book_body">Opinion</label>
    <%= f.text_area :body, :class=>"col-xs-12 book_body" %>
</div>

<div class="actions row">
    <%= f.submit 'Update Book', :class=>"btn btn-primary col-xs-12" %>
</div>

<%= link_to "Show", "/books/#{@book.id}" %> |
<%= link_to "Back", "/books" %>
<% end %>

 </div>
</div>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>