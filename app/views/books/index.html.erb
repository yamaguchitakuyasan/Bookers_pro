<header class="navbar navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">Home</a></li>
      <li><a href="#">Users</a></li>
      <li><a href="#">Books</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
    </nav>
  </div>
</header>

<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <h1>User info</h1>
    <div class="profile-container">
      <h2 class="profile-name"><%= current_user.name %></h2>
    </div>
    <h1>New book</h1>
    <%= form_for(@book) do |f| %>
     <div class="field">
      <label for="book_title">Title</label>
    <%= f.text_field :title %>
     </div>
     <div class="field">
      <label for="book_body">Body</label>
    <%= f.text_area :body %>
     </div>
     <div class="actions">
    <%= f.submit 'Create Book' %>
     </div>
    <% end %>
   </div>
  </div>

  <div class="col-lg-9">
   <h1>Books</h1>
   <table class="table table-striped">
     <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
       <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
       </tr>
      <% end %>
     </tbody>
   </table>
   </div>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>